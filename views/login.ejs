<%- include("partials/header") -%>

  <div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <p>
              <%- error %>
            </p>
            <form id="loginStudent" action="/login" method="POST">
              <div class="form-group">
                <label for="username">PRN</label>
                <input type="text" class="form-control" name="username" placeholder="Enter PRN" />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter Password" />

                <input id="student" type="button" value="Teacher Login" class="login" style="float: right"
                  onclick="window.location.href = 'http://localhost:3000/loginT'" />
              </div>
              <button type="submit" class="btn btn-dark">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
